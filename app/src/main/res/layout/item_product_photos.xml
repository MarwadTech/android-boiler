<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:background="@color/transparent"
    android:layout_height="wrap_content">



        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="@dimen/dimen_55"
            android:layout_height="@dimen/dimen_55"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/user_pic2"
            android:scaleType="centerCrop"
            app:strokeWidth="@dimen/dimen_2"
            android:padding="@dimen/dimen_2"
            app:strokeColor="@color/light_orange"
            android:layout_margin="@dimen/dimen_5"
            app:shapeAppearance="@style/ShapeAppearance.ImageView_8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/imgProfile"/>


        <TextView
            android:id="@+id/txtName"
            style="@style/materialText_Semi_Bold_16"
            android:layout_width="@dimen/dimen_0"
            android:layout_height="@dimen/dimen_0"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:textSize="@dimen/_15sp"
            android:layout_margin="@dimen/dimen_2"
            android:text="+2"
            android:background="@drawable/shape_rounded_black_10"
            android:gravity="center|center_vertical"
            android:elevation="@dimen/dimen_2"
            app:layout_constraintEnd_toEndOf="@id/imgProfile"
            android:textAllCaps="true"
            app:layout_constraintTop_toTopOf="@id/imgProfile"
            app:layout_constraintBottom_toBottomOf="@id/imgProfile"
            app:layout_constraintStart_toStartOf="@id/imgProfile"
            android:textColor="@color/white"/>



    </androidx.constraintlayout.widget.ConstraintLayout>
