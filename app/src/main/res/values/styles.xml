<resources>

    <style name="Widget.Theme.Localfinds.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.Localfinds.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="bottomStyle" parent="Animation.Design.BottomSheetDialog">
        <item name="android:windowEnterAnimation">@anim/sb__bottom_in</item>
        <item name="android:windowExitAnimation">@anim/sb__bottom_out</item>
    </style>

    <style name="AlertConfirmationDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="materialAlertDialogBodyTextStyle">
            @style/BodyMaterialAlertDialog.MaterialComponents.Body.Text
        </item>
        <item name="materialAlertDialogTitleTextStyle">
            @style/BodyMaterialAlertDialog.MaterialComponents.Title.Text
        </item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>


    <style name="ShapeAppearance.ImageView" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="cornerSize">5%</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="ShapeAppearance.ImageView_8" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="cornerSize">9%</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="ShapeAppearance.ImageView_circle" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="cornerSize">50%</item>
        <item name="cornerFamily">rounded</item>
    </style>



    <style name="BodyMaterialAlertDialog.MaterialComponents.Body.Text" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/dimen_12</item>
        <item name="fontFamily">@font/poppins_regular</item>
    </style>

    <style name="BodyMaterialAlertDialog.MaterialComponents.Title.Text" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/dimen_14</item>
        <item name="fontFamily">@font/poppins_regular</item>
    </style>

    <style name="CustomDialog" parent="@android:style/Theme.DeviceDefault.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    
    <style name="CommonCardView" parent="@style/CardView">
        <item name="elevation">@dimen/dimen_10</item>
        <item name="cardCornerRadius">@dimen/dimen_10</item>
        <item name="cardElevation">@dimen/dimen_10</item>
    </style>


    <style name="materialButton" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">@dimen/buttonCorners</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:letterSpacing">0.00714285714</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">@dimen/button_text_size_normal</item>
        <item name="android:textColor">@color/material_button_color_text</item>
        <item name="android:backgroundTint">@color/material_button_color_background</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="materialButtonOrange" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">@dimen/buttonCorners</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:letterSpacing">0.00714285714</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">@dimen/button_text_size_normal</item>
        <item name="android:textColor">@color/material_button_color_text</item>
        <item name="android:backgroundTint">@color/material_button_color_background_orange</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="materialButtonRed" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">@dimen/buttonCorners</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:letterSpacing">0.00714285714</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">@dimen/button_text_size_normal</item>
        <item name="android:textColor">@color/material_button_color_text</item>
        <item name="android:backgroundTint">@color/material_button_color_background_red</item>
        <item name="android:stateListAnimator">@null</item>
    </style>


    <style name="materialButton.outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">@dimen/buttonCorners</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">@dimen/button_text_size_normal</item>
        <item name="strokeWidth">@dimen/outline_normal</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:letterSpacing">0.00714285714</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="android:stateListAnimator">@null</item>
    </style>


    <style name="Button.MyTheme" parent="Widget.MaterialComponents.Button">
        <item name="android:textStyle">bold</item>
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/bg_add_btn</item>
        <item name="android:textColor">@color/purple</item>
    </style>



</resources>
